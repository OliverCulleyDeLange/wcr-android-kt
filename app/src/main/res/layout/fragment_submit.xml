<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="uk.co.oliverdelange.wcr_android_kt.ui.submit.SubmitViewModel" />
    </data>

    <LinearLayout
        style="@style/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/crag_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/FloatingLabel">

            <EditText
                android:id="@+id/crag_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/submission_text_input_crag_name"
                android:inputType="textCapWords"
                android:text="@={vm.cragName}"
                android:theme="@style/EditText" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/submit"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="@{vm::submit}"
            android:text="@string/button_submit" />
    </LinearLayout>
</layout>
