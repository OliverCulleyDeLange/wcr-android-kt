<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--  Bottom Sheet Peek -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/title"
            style="@style/Wcr_MapBottomSheetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title" />

        <TextView
            style="@style/Wcr_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text" />
    </LinearLayout>

    <!--  Bottom Sheet Content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/Wcr_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_detail" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/random_crag"
            style="@style/Wcr_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="exploreRandomCrag"
            android:text="@string/welcome_random_crag" />
    </LinearLayout>
</LinearLayout>