<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="uk.co.oliverdelange.wcr_android_kt.model.LocationType" />

        <variable
            name="vm"
            type="uk.co.oliverdelange.wcr_android_kt.ui.submit.SubmitTopoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <uk.co.oliverdelange.wcr_android_kt.ui.view.TouchImageView
                android:id="@+id/topo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/bg_grey_light"
                android:scaleType="fitCenter"
                app:imageUri="@{vm.localTopoImage}"
                app:placeholder="@{@drawable/ic_photo}"
                tools:src="@drawable/nature" />

            <uk.co.oliverdelange.wcr_android_kt.ui.view.TouchImageView
                android:id="@+id/topo_image_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_route_point" />

        </FrameLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/topo_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/Wcr_FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/topo_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/submission_text_input_topo_name"
                android:inputType="textCapWords"
                android:text="@={vm.topoName}"
                android:theme="@style/Wcr_EditText" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/route_pager"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <ImageButton
            android:id="@+id/add_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_add" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="right">

            <Button
                android:id="@+id/submit"
                style="@style/Wcr_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:enabled="@{vm.submitButtonEnabled}"
                android:text="@string/button_submit" />


            <ProgressBar
                android:id="@+id/topo_submit_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:max="500"
                android:progress="0"
                android:progressDrawable="@drawable/spinner"
                app:show="@{vm.submitting}" />
        </RelativeLayout>
    </LinearLayout>
</layout>
