<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--CONTAINER-->
    <style name="Container">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!--MAP-->
    <style name="MapToggle" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:color">@color/text_grey</item>
        <item name="android:background">@drawable/btn_map_toggle</item>
    </style>

    <!--MAP ICONS-->
    <style name="generated_icon_text">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="generated_crag_icon_text" parent="generated_icon_text">
        <item name="android:textColor">@color/crag_accent</item>
    </style>

    <style name="generated_crag_icon_text_dimmed" parent="generated_icon_text">
        <item name="android:textColor">@color/crag_light</item>
    </style>

    <style name="generated_sector_icon_text" parent="generated_icon_text">
        <item name="android:textColor">@color/sector_accent</item>
    </style>

    <!--OUTPUT-->
    <style name="MapBottomSheetTitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MapBottomSheetClimbTypeIcon">
        <item name="android:paddingEnd">3dp</item>
    </style>

    <style name="MapBottomSheetClimbTypeText">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MapBottomSheetClimbGradesText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MapBottomSheetClimbGradesText.DarkText" parent="MapBottomSheetClimbGradesText">
        <item name="android:textColor">@color/text_grey_dark</item>
    </style>

    <style name="MapBottomSheetClimbGradesText.LightText" parent="MapBottomSheetClimbGradesText">
        <item name="android:textColor">@color/text_grey_light</item>
    </style>

    <!--INPUT-->
    <style name="FloatingLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">

    </style>
</resources>
