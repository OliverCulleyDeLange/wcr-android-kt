<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  https://developer.android.com/reference/android/R.styleable.html#Theme-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <!--        <item name="android:textColorPrimaryInverse">@color/text_grey</item>-->

        <!--        <item name="android:editTextStyle">@style/Wcr_EditText</item>-->
        <!--        <item name="android:buttonStyle">@style/Wcr_Button</item>-->
    </style>

    <style name="Wcr_Text" parent="android:Widget.TextView" />

    <style name="Wcr_Text_Small" parent="Wcr_Text">
        <item name="android:textSize">12sp</item>
    </style>

    <!--CONTAINER-->
    <style name="Wcr_Container">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!--MAP-->
    <style name="Wcr_MapToggle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:color">@color/text_grey</item>
        <item name="android:background">@drawable/btn_map_toggle</item>
    </style>

    <!--MAP ICONS-->
    <style name="Wcr_GeneratedIconText">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Wcr_GeneratedCragIconText" parent="Wcr_GeneratedIconText">
        <item name="android:textColor">@color/crag_accent</item>
    </style>

    <style name="Wcr_GeneratedCragIconTextDimmed" parent="Wcr_GeneratedIconText">
        <item name="android:textColor">@color/crag_light</item>
    </style>

    <style name="Wcr_GeneratedSectorIconText" parent="Wcr_GeneratedIconText">
        <item name="android:textColor">@color/sector_accent</item>
    </style>

    <style name="Wcr_GeneratedSectorIconTextDimmed" parent="Wcr_GeneratedIconText">
        <item name="android:textColor">@color/sector_light</item>
    </style>

    <!--BOTTOM SHEET-->
    <style name="Wcr_MapBottomSheetTitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Wcr_MapBottomSheetClimbTypeIcon">
        <item name="android:paddingEnd">3dp</item>
    </style>

    <style name="Wcr_MapBottomSheetClimbTypeText">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Wcr_MapBottomSheetClimbGradesText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Wcr_MapBottomSheetClimbGradesText.DarkText" parent="Wcr_MapBottomSheetClimbGradesText">
        <item name="android:textColor">@color/text_grey_dark</item>
    </style>

    <style name="Wcr_MapBottomSheetClimbGradesText.LightText" parent="Wcr_MapBottomSheetClimbGradesText">
        <item name="android:textColor">@color/text_grey_light</item>
    </style>

    <!--TOPO_MODE STYLING-->
    <style name="Wcr_TopoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Wcr_TopoTitleText" parent="Wcr_TopoText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/text_grey_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Wcr_RouteTitleText" parent="Wcr_TopoTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Wcr_TopoContentText" parent="Wcr_TopoText">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Wcr_TopoGradeText" parent="Wcr_TopoText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Wcr_TopoClimbTypeText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>

    </style>

    <!--INPUT-->

    <style name="Wcr_EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="Wcr_EditText_Small" parent="Wcr_EditText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Wcr_Button" parent="Widget.MaterialComponents.Button.UnelevatedButton" />

    <style name="Wcr_Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:height">10dp</item>
    </style>

    <style name="Wcr_SpinnerItem" parent="Wcr_Text_Small">
        <item name="android:padding">5dp</item>
    </style>

    <style name="Wcr_SpinnerLabel" parent="Wcr_Text_Small">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>


    <!-- TUTORIAL -->
    <style name="Wcr_Tutorial_Title" parent="Wcr_Text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Wcr_Tutorial_Text" parent="Wcr_Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FCFCFC</item>
    </style>

    <style name="Wcr_Tutorial_Exit_Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:background">@color/bg_tutorial</item>
    </style>
</resources>
