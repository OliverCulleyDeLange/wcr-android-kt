<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--CONTAINER-->
    <style name="Container">
        <item name="android:padding">15dp</item>
    </style>

    <!--MAP-->
    <style name="Wcr_MapToggle" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:color">@color/text_grey</item>
        <item name="android:background">@drawable/btn_map_toggle</item>
    </style>

    <!--MAP ICONS-->
    <style name="generated_icon_text">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="generated_crag_icon_text" parent="generated_icon_text">
        <item name="android:textColor">@color/crag_accent</item>
    </style>

    <style name="generated_sector_icon_text" parent="generated_icon_text">
        <item name="android:textColor">@color/sector_accent</item>
    </style>

    <!--INPUT-->
    <style name="FloatingLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">

    </style>
</resources>
